<%= form_for(@micropost) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
  	<%= f.text_area :content, placeholder: "コメント入力..." %>
  </div>
  <div class="image">
  	<%= f.file_field :image %>
  </div>
  <%= f.submit "投稿する", class: "btn btn-large btn-primary" %>
<% end %>