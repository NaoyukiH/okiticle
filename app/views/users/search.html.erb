 <%= gravatar_for found, size: 52 %>
 <%= link_to found.name, found %>
 <% if current_user.admin? && !current_user?(found) %>
     <%= link_to "delete", found, method: :delete,
                                  data: { confirm: "You sure?" } %>
 <% end %>
</li>
<% end %>
</ul> 


