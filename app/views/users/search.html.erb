
<%= form_tag search_path, :method => 'get' do %> 
   <p>
     <%= text_field_tag :search, params[:search] %>
     <%= submit_tag "Search", :name => nil %>
   </p>
<% end %> 



 <ul class= "users">
<% @found_user.each do |found| %>

<!-- 下のコードだとエラー出る -->
